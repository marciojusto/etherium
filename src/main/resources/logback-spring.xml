<configuration>
    <springProperty name="APP_NAME" source="spring.application.name"/>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <if condition='isDefined("elastic.apm.service_name")'>
            <then>
                <encoder class="co.elastic.logging.logback.EcsEncoder">
                    <serviceName>${APP_NAME}</serviceName>
                    <stackTraceAsArray>true</stackTraceAsArray>
                </encoder>
            </then>
            <else>
                <encoder>
                    <pattern>%d{dd-MM-yyyy HH:mm:ss.SSS} %green([%thread]) %highlight(%-5level) %logger{36}.%M - %yellow(%msg%n)</pattern>
                </encoder>
            </else>
        </if>
    </appender>
    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>